mixin NavbarServion
  nav.navbar.navbar-expand-lg.navbar-light.fixed-top.py-4.d-block(data-navbar-on-scroll)
    .container
      a.navbar-brand(href='index.html')
        img(src=`${CWD}assets/img/gallery/logo.png`   height="24"  alt='...')
        
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon 
      #navbarSupportedContent.collapse.navbar-collapse.border-top.border-lg-0.mt-4.mt-lg-0
        ul.navbar-nav.ms-auto.pt-2.pt-lg-0.font-base
          li.nav-item.px-2(data-anchor)
            a.nav-link.fw-medium(aria-current='page', href='#home' class= currentPage === 'index' ? 'active' : false ) Home
          li.nav-item.px-2(data-anchor)
            a.nav-link(href='#team') Team
          li.nav-item.px-2(data-anchor)
            a.nav-link(href='#pricingTable') Pricing table
          li.nav-item.px-2(data-anchor)
            a.nav-link(href='#help') Help
          
        form.ps-lg-5
          a.btn.btn-light.order-1.order-lg-0( href="#!") login
            svg.bi.bi-person-fill(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewBox='0 0 16 16')
              path(d='M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z')