mixin Testimonials
  section.py-8#team
    +Background({image: `${CWD}assets/img/gallery/testimonial-bg.png`, attrs: { style: { 'background-position': 'center', 'background-size': 'cover',} }, className: '' })
    .container
      .row
        .col-lg-6.col-xxl-5.text-center.mx-auto.mb-5
          h2 Valued customers with valuable feedback
          p.mb-5 Feedbacks from our happy users. Become one of them. 
      #carouselExampleDark.carousel.slide(data-bs-ride='carousel')
        .carousel-inner
          .carousel-item.active(data-bs-interval='10000')
            .row.h-100
              +Items(testimonials[0])
              +Items(testimonials[1])          
          .carousel-item(data-bs-interval='2000')
            .row.h-100
              +Items(testimonials[2])
              +Items(testimonials[3]) 
          .carousel-item
            .row.h-100
              +Items(testimonials[0])
              +Items(testimonials[1]) 
        
        a.carousel-control-prev.carousel-icon.z-index-2(href='#carouselExampleDark' role='button' data-bs-slide='prev')
          span.carousel-control-prev-icon(aria-hidden='true')
          span.visually-hidden Previous
        a.carousel-control-next.carousel-icon.z-index-2(href='#carouselExampleDark' role='button' data-bs-slide='next')
          span.carousel-control-next-icon(aria-hidden='true')
          span.visually-hidden Next
        .row.px-3.px-md-0.mt-4
          .col-12.position-relative
            ol.carousel-indicators
              li.active(data-bs-target='#carouselExampleDark' data-bs-slide-to='0')
              li(data-bs-target='#carouselExampleDark' data-bs-slide-to='1')
              li(data-bs-target='#carouselExampleDark' data-bs-slide-to='2')
          









