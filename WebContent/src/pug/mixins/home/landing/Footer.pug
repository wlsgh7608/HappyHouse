      .row.min-vh-75.min-vh-xl-50.pt-10
        .col-6.col-md-4.col-xl-3.mb-3
          h5.lh-lg.fw-bold.text-white HOSTING
          ul.list-unstyled.mb-md-4.mb-lg-0
            +FooterList('Shared Hosting','VPS Hosting','Cloud Hosting','Wordpress Hosting')
        .col-6.col-md-4.col-xl-3.mb-3
          h5.lh-lg.fw-bold.text-white FEATURES
          ul.list-unstyled.mb-md-4.mb-lg-0
            +FooterList('Beginner Guide','Move to Servion','Website Builder','Tools and Resources')

        .col-6.col-md-4.col-xl-3.mb-3
          h5.lh-lg.fw-bold.text-white SUPPORT
          ul.list-unstyled.mb-md-4.mb-lg-0
            +FooterList('Help Center','Submit a Ticket','Contact Us','Blog')  
        .col-xl-3.mb-3
          h5.lh-lg.fw-bold.text-white WE ACCEPT
          ul.list-unstyled.list-inline.mb-6.mb-md-0
